/*
    uberspark uobj sentinel linkage table manifest (armv8_32/generic)
    author: amit vasudevan (amitvasudevan@acm.org)
*/

{

		"uberspark.manifest.namespace" : [ "uberspark-uobjslt" ],
		"uberspark.manifest.version_min" : "any",
		"uberspark.manifest.version_max" : "any",


		"uberspark.uobjslt.namespace" : "/uberspark/uobjslt/armv8_32/generic",
		"uberspark.uobjslt.platform" : "generic",
		"uberspark.uobjslt.arch" : "armv8_32",
        "uberspark.uobjslt.cpu" : "generic",
        "uberspark.uobjslt.sizeof_addressing" : "4",

        /* uobjslt direct execution transfer code template 
        inputs: constant address, UOBJSLT_SENTINEL_PM_ADDRESS
        */
        "uberspark.uobjslt.code_template_directxfer": "
            ldr r0, = UOBJSLT_SENTINEL_PM_ADDRESS_LOC
            mov pc, r0
        ",

        /* uobjslt indirect execution transfer code template 
        inputs: constant address of (table) location where sentinel/pm address resides, UOBJSLT_SENTINEL_PM_ADDRESS_LOC
        */
        "uberspark.uobjslt.code_template_indirectxfer": "
            ldr r0, = UOBJSLT_SENTINEL_PM_ADDRESS_LOC
            mov r0, (r0)
            mov pc, r0
        ",

        /* uobjslt address definition template 
        inputs: constant address, UOBJSLT_CONST_ADDRESS
        */
        "uberspark.uobjslt.code_template_data_definition": "
            .long UOBJSLT_CONST_ADDRESS
        "


    
}