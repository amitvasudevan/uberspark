/*
    uberspark uobj sentinel linkage table manifest (x86_32/generic)
    author: amit vasudevan (amitvasudevan@acm.org)
*/

{

	/* uberspark header */
	"uberspark-hdr":{
		"coss_version" : "any",
		"mftype" : "uobjslt",
		"uberspark_min_version" : "any",
		"uberspark_max_version" : "any"
	},


    /* uobjslt header */
	"uobjslt-hdr":{
		"namespace" : "/uberspark/uobjslt/x86_32/generic",
		"platform" : "generic",
		"arch" : "x86_32",
		"cpu" : "generic"
	},

    /* uobjslt direct execution transfer code template 
       inputs: constant address, UOBJSLT_SENTINEL_PM_ADDRESS
    */
    "uobjslt-directxfer": "
        movl $(UOBJSLT_SENTINEL_PM_ADDRESS), %eax
        jmpl *%eax
    ",

    /* uobjslt indirect execution transfer code template 
       inputs: constant address of (table) location where sentinel/pm address resides, UOBJSLT_SENTINEL_PM_ADDRESS_LOC
    */
    "uobjslt-indirectxfer": "
        movl $(UOBJSLT_SENTINEL_PM_ADDRESS_LOC), %eax
        movl (%eax), %eax
        jmpl *%eax
    ",

    /* uobjslt address definition template 
       inputs: constant address, UOBJSLT_CONST_ADDRESS
    */
    "uobjslt-addrdef": "
        .long UOBJSLT_CONST_ADDRESS
    ",


    /*  trampoline code template 

        parameters: 
        TRAMPOLINE_DATA_VARNAME = variable name of trampoline data
        TRAMPOLINE_FN_INDEX = 0 based index of the ubj callee/exitcallee function
    */ 
    "uobjslt-trampolinecode": "
        movl (TRAMPOLINE_DATA_VARNAME + TRAMPOLINE_FN_INDEX), %eax
        jmpl *%eax
    ",


    /*  trampoline data template

        parameters:
        TRAMPOLINE_DATA_VARNAME = variable name of trampoline data
        TOTAL_TRAMPOLINES = total number of trampolines
    */
    "uobjslt-trampolinedata": "
        .global TRAMPOLINE_DATA_VARNAME
        TRAMPOLINE_DATA_VARNAME: .fill TOTAL_TRAMPOLINES, 4, 0
    "

}