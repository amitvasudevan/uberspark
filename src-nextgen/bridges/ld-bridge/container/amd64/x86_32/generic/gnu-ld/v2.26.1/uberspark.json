/*
    uberSpark code bridges json definition
*/

{
   	/* manifest header */
	   "uberspark-manifest":{
		"namespace" : [ "uberspark-bridge-ld" ],
		"version_min" : "any",
		"version_max" : "any"
	},
	
	"uberspark-bridge-ld" : {
		/* bridge header */
		"bridge-hdr":{
			"category" : "container",
			"name" : "gnu-ld",
			"executable_name" : "ld",
			"dev_environment" : "amd64",
			"arch" : "x86_32",
			"cpu" : "generic",
			"version" : "v2.26.1",
			"path" : ".",
			"parameters" : [ "-m elf_i386", "--oformat=elf32-i386"  ],
			"container_filename" : "uberspark_bridges.Dockerfile"
		},

		"params_prefix_lscript" : "-T",
		"params_prefix_libdir" : "-L",
		"params_prefix_lib" : "-l",
		"params_prefix_output" : "-o",

		"cmd_generate_flat_binary" : "objcopy -O binary"

	}

}