/*
    uberSpark code bridges json definition
*/

{
   	/* manifest header */
	   "uberspark-manifest":{
		"manifest_node_types" : [ "uberspark-bridge-vf" ],
		"uberspark_min_version" : "any",
		"uberspark_max_version" : "any"
	},

    "uberspark-bridge-vf" : {
		/* bridge header */
		"bridge-hdr":{
			"btype" : "container",
			"bname" : "uberspark",
			"execname" : "uberspark",
			"devenv" : "amd64",
			"arch" : "generic",
			"cpu" : "generic",
			"version" : "v6.0.0",
			"path" : ".",
			"params" : [ ],
			"container_fname" : "uberspark-bridge.Dockerfile"
		},

		"bridge_cmd" : [
			"	
				pwd &&	
				ls -l && 
				frama-c --version
			"
		] 

	}

}
