/*
    uberSpark code bridges json definition
*/

{
   	/* manifest header */
	   "uberspark-manifest":{
		"manifest_node_types" : [ "uberspark-bridge-as" ],
		"uberspark_min_version" : "any",
		"uberspark_max_version" : "any"
	},

    "uberspark-bridge-as" : {
		/* bridge header */
		"bridge-hdr":{
			"btype" : "container",
			"bname" : "gnu-as",
			"execname" : "arm-linux-gnueabihf-gcc",
			"devenv" : "amd64",
			"arch" : "armv8_32",
			"cpu" : "generic",
			"version" : "v2.26.1",
			"path" : ".",
			"params" : [
				"-marm",
				"-march=armv8-a",
				"-mno-thumb-interwork"
			],
			"container_fname" : "uberspark_bridges.Dockerfile"
		},

		"params_prefix_obj" : "-c",
        "params_prefix_output" : "-o",
		"params_prefix_include" : "-I",
		
		"bridge_cmd" : [
			"	
				echo source files: @@BRIDGE_SOURCE_FILES@@ &&
				echo include dirs: @@BRIDGE_INCLUDE_DIRS@@ &&
				echo include dirs with prefix: @@BRIDGE_INCLUDE_DIRS_WITH_PREFIX@@ &&
				echo bridge plugin dir: @@BRIDGE_PLUGIN_DIR@@ &&
				export var_bridge_include_dirs &&
				export var_bridge_source_files &&
				export vararray_bridge_include_dirs &&
				export vararray_bridge_source_files &&
				export include_prefix=\"-I\" &&
				export include_string &&
				var_bridge_include_dirs=\" @@BRIDGE_INCLUDE_DIRS@@ \" &&
				var_bridge_source_files=\" @@BRIDGE_SOURCE_FILES@@ \" &&
				vararray_bridge_include_dirs=$(echo $var_bridge_include_dirs | tr \" \" \"\\n\") &&
				for include_dir_name in $vararray_bridge_include_dirs; do include_string=\"${include_string} ${include_prefix}${include_dir_name}\"; done &&
				echo \"include_string=$include_string\" &&
				vararray_bridge_source_files=$(echo $var_bridge_source_files | tr \" \" \"\\n\") &&
				for source_file_name in $vararray_bridge_source_files; do \\
					echo Compiling file: $source_file_name ...; \\
				done &&

			"
		] 

	}

}
