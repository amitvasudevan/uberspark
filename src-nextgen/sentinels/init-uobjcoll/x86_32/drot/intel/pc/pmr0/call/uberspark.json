/*
    uberspark sentinel manifest 
    author: amit vasudevan (amitvasudevan@acm.org)
*/

{

	/* manifest header */
	"uberspark-manifest":{
		"manifest_node_types" : [ "uberspark-sentinel" ],
		"uberspark_min_version" : "any",
		"uberspark_max_version" : "any"
	},

    "uberspark-sentinel" : {

		"namespace" : "uberspark/sentinels/init-uobjcoll/x86_32/drot/pc/pmr0/call/uberspark.json",
		"platform" : "pc",
		"arch" : "x86_32",
        "cpu" : "intel",
        "sizeof-code" : "0x1000", 

        /*  sentinel code template 

            parameters: 
            PUBLICMETHOD_ADDR = address of public method within uobj/uobjcoll
        */ 
        "code": "
            /* sentinel size = SENTINEL_SIZE */
            .space 0x3000, 0
            .space 0x80, 0
            .global init_start
            init_start:
                movl $(PUBLICMETHOD_ADDR), %eax
                jmpl *%eax
                hlt
            ",

        /*  sentinel library code template 

            parameters: 
            PUBLICMETHOD_SENTINEL_ADDR = address of public method sentinel
        */ 
        "libcode": "
            movl (PUBLICMETHOD_SENTINEL_ADDR), %eax
            jmpl *%eax
        "
    }


}
