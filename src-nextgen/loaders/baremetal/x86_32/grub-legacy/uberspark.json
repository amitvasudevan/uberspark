/*
    uberSpark code bridges json definition
*/

{
    /* manifest header */
    "uberspark-manifest":{
        "manifest_node_types" : [ "uberspark-loader" ],
        "uberspark_min_version" : "any",
        "uberspark_max_version" : "any"
    },

    "uberspark-loader" : {
		"namespace" : "uberspark/loaders/baremetal/x86_32/grub-legacy",
		"platform" : "any",
		"arch" : "x86_32",
        "cpu" : "generic",

        "bridge_ns" : "baremetal/amd64/x86_32/generic/gcc/v5.5.0",
        "bridge_cmd" : [
            "make all"
        ]
        
    }

}
