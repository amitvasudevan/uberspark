{
	/* header */
	"hdr":{
		"type" : "configdefs",
		"namespace" : "/uberspark/config",
		"platform" : "generic",
		"arch" : "generic",
		"cpu" : "generic"
	},


    "constdef_binary": 
    {  
        "files": [
            "filename1.ext1",
            "filename2.ext2",
            "filename3.ext3"
        ],

        "def-nodes" : 
        {
            "node1": 
            {
                "constdef": 
                {
                    "id1_name": "id1_value",
                    "id2_name": "id2_value"
                }
            }
        }
    },
    
    "constdef_general": 
    {  
        "files": [
            "filename1.ext1",
            "filename2.ext2"
        ],

        "def-nodes" : 
        {
            "node1": 
            {
                "constdef" :
                {
                    "id1_name": "id1_value"
                }
            },
            "node2": 
            {
                "constdef" : 
                {
                    "id1_name": "id1_value",
                    "id2_name": "id2_value",
                    "id3_name": "id3_value"
                }
            }
        }
    }     



}